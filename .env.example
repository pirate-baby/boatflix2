# User/Group IDs for file permissions
PUID=1000
PGID=1000

# Timezone
TZ=America/New_York

# VPN Configuration
# Place your OpenVPN .ovpn file in ./configs/qbittorrentvpn/openvpn/
# Or place your WireGuard wg0.conf in ./configs/qbittorrentvpn/wireguard/
VPN_USER=
VPN_PASSWORD=

# Media storage path on host (used for volume mounts)
# This is the HOST path - containers mount this to /mnt/media internally
MEDIA_PATH=/media/boatflix/Expansion/media

# Downloads path on host (where torrents are downloaded)
# This is the HOST path - containers mount this to /mnt/media/Downloads internally
DOWNLOADS_PATH=/media/boatflix/Expansion/media/Downloads

# TMDB API Key for metadata enrichment (optional, free tier available at themoviedb.org)
TMDB_API_KEY=

# rclone sync configuration
# Remote name as configured in rclone.conf (e.g., "s3", "b2", "gdrive")
RCLONE_REMOTE=
# Bucket/path on the remote (e.g., "my-media-bucket" or "my-bucket/media")
RCLONE_BUCKET=
# Path to rclone.conf file (default: ./rclone.conf)
RCLONE_CONFIG=./rclone.conf
# Cron expression for scheduled sync (default: 2am daily)
SYNC_CRON=0 2 * * *
# Enable/disable scheduled sync (true/false)
SYNC_ENABLED=true

# PySceneDetect configuration for commercial video splitting
# Enable/disable scheduled scene detection processing (true/false)
SCENE_DETECT_ENABLED=false
# Cron expression for scheduled processing (default: 3am daily)
SCENE_DETECT_CRON=0 3 * * *
# Content detector threshold (higher = less sensitive, default: 27.0)
SCENE_DETECT_THRESHOLD=27.0
# Minimum scene length in seconds (default: 0.5)
SCENE_DETECT_MIN_SCENE_LEN=0.5

# YouTube / YouTube Music sync configuration
# Enable/disable scheduled YouTube playlist sync (true/false)
YOUTUBE_SYNC_ENABLED=true
# Cron expression for YouTube sync (default: every 6 hours)
YOUTUBE_SYNC_CRON=0 */6 * * *
# YouTube OAuth2 credentials (get from https://console.cloud.google.com)
# 1. Create a new project or select existing
# 2. Enable YouTube Data API v3
# 3. Create OAuth 2.0 credentials (Web application)
# 4. Add redirect URI: http://manager.localhost/api/youtube/auth/callback
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=
# Redirect URI (must match OAuth credentials above)
YOUTUBE_REDIRECT_URI=http://manager.localhost/api/youtube/auth/callback
# Encryption key for storing OAuth tokens (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
YOUTUBE_ENCRYPTION_KEY=
